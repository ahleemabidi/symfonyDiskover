{% extends 'matricule.html.twig' %}

{% block title %}New Mission{% endblock %}

{% block body %}
   <div class="container my-5">
    <div class="text-center">
      
  <h1 class="text-center">Ajouter une mission</h1>
    </div>
       
      
        <div class="row justify-content-center">
            <div class="col-md-4">
                {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                {{ form_row(form.matricule,{ 'attr': {'class': 'form-control'} }) }}
                {{ form_row(form.description,{ 'attr': {'class': 'form-control'} }) }}
                {{ form_row(form.heureDebut,{ 'attr': {'class': 'form-control'} }) }}
                {{ form_row(form.heureFin,{ 'attr': {'class': 'form-control'} }) }}
                <br>
                <div class="mx-auto col-md-2">
                    {{ form_rest(form,{ 'attr': {'class': 'btn btn-primary'} })}}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="row mt-3 justify-content-end">
            <div class="col-md-4 text-right">
                <a href="{{ path('app_chauffeur_index') }}" class="btn btn-primary">
                    <i class="far fa-eye"></i> Show Missions
                </a>
            </div>
        </div>
    </div>
{% endblock %}
