{% extends 'base.html.twig' %}


{% block title %} Liste Event{% endblock %}

{% block body %}
<section class="product_list best_seller">
    <div class="container" >           
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-9">
                <div class="row">


                <a href="{{ path('app_colaborationevent_index', {sort: sort == 'asc' ? 'desc' : 'asc'}) }}" class="btn btn-sm btn-secondary">
    <i class="bi bi-sort-alpha-{{ sort == 'asc' ? 'down' : 'up' }}"></i> Trier par nom
</a>






                    <div class="col-lg-12">
                      <div class="row align-items-center latest_product_inner">

                        {% for colaborationevent in colaborationevents %}
                     
                        <div class="col-md-4">
                            <div class="car-wrap rounded ftco-animate">
                                <div class="img rounded d-flex align-items-end" style="background-image: url(images/car-7.jpg);">
                                </div>
    	                        <div class="text">
    	                            <h2>{{ colaborationevent.nomevent }}</h2>
    		                            <div class="d-flex mb-3">
	    		                    <span class="cat">{{ colaborationevent.adresseevent }}</span>
	    			                <p class="price ml-auto">{{ colaborationevent.prixvehiculeevent }}<span>DT</span></p>
    		                            </div>
    			                    <p class="d-flex mb-0 d-block"><a href="{{ path('app_reservationvehiculee_new') }}" class="btn btn-primary py-2 mr-1">Book now</a> <a href="{{ path('app_colaborationevent_show', {'idevent': colaborationevent.idevent}) }}" class="btn btn-secondary py-2 ml-1">Details</a></p>
    	                        </div>
                            </div>
                        </div>



                        {% else %}            
                             <p>no records found</p>           
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>               
    </div>

            <div class="d-flex justify-content-center">
            {% do colaborationevents.setPageRange(2) %}
            {{ knp_pagination_render(colaborationevents, 'pagination.html.twig')}}
            </div>
        
            

<div id="google_translate_element"></div>
         <script type="text/javascript">
             function googleTranslateElementInit() {
                 new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
             }
         </script>

         <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
        
         <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>


        </div>     
    </section>
{% endblock %}