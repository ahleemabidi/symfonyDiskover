<body>
    <h1>Bienvenue dans votre application Diskover</h1>
    <h2>Voila la liste de tout les reclamations en attentes</h2>

    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>cin</th>
                <th>type</th>
                <th>objet</th>
                <th>message</th>
                <th>date</th>
            </tr>
        </thead>
        <tbody>
            {% for a in reclamations %}
            <tr>
                <td>{{a.id }}</td>
                <td>{{a.cin }}</td>
                <td>{{a.type}}</td>
                <td>{{a.objet}}</td>
                <td>{{a.message }}</td>
                <td>{{a.date.format('j-m-y')}}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
