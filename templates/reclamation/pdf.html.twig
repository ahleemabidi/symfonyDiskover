    <link rel="stylesheet" href="{{ asset('../../Back/css/styles.css') }}">
    <style>
        /* Add your CSS styles here */
        body {
            font-family: Arial, sans-serif;
            font-size: 16px;
            color: #333;
            background-color: #f5f5f5;
        }
        h1 {
            text-align: center;
            margin-top: 50px;
            color: #0077be;
        }
        h2 {
            text-align: center;
            margin-top: 50px;
            color: #0077be;
        }
        table {
            margin: 50px auto;
            border-collapse: collapse;
            width: 80%;
            color: #0077be;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }
        th {
            background-color: #0077be;
            font-size: 18px;
            color: #fff;
        }
        td {
