<script>
$(document).ready(function() {
    $('#search-bar').on('input', function() {
        var cin = $(this).val();

        $.ajax({
            url: '{{ path('reclamation_recherche_ajax') }}',
            type: 'GET',
            data: {
                cin: cin
            },
            success: function(data) {
                var html = '';
                $.each(data, function(index, reclamation) {
                    html += '<div class="card">';
                    html += '<div class="card-body">';
                    html += '<h5 class="card-title">' + reclamation.objet + '</h5>';
                    html += '<p class="card-text">' + reclamation.message + '</p>';
                    html += '<p class="card-text">' + reclamation.date + '</p>';
                    html += '</div>';
                    html += '</div>';
                });
                $('#reclamations').html(html);
            }
        });
    });

    $('#clear-search').on('click', function() {
        $('#search-bar').val('');
        $('#reclamations').html('');
    });
});
</script>




			
