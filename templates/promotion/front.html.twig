{% extends 'front2.html.twig' %}

{% block title %}Nos Promtions {% endblock %}
{% block body %}

    {% for promotion in promotions %}
    <div class="item">
        <div class="car-wrap rounded ftco-animate">
            <div class="img rounded d-flex align-items-end" style="background-image: url({{ asset('front/images/car-1.jpg') }});">
            </div>
            <div class="text">
                <h2 class="mb-0"><a href="#"></a></h2>
                <div class="d-flex mb-3">
                    <span >{{ promotion.nomP }}</span>
                    <p class="price ml-auto">{{ promotion.DureeP }} <span>day</span></p>
                </div>
            </div>
             <a href="{{ path('app_offre_front', {'id': promotion.offre.id}) }}"class="btn btn-primary"style="background-color: #19B151;border-color: #19B151;">Consulter Offre</a>

        </div>
    </div>
{% endfor %}


{% endblock %}