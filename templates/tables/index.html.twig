{% extends 'base.html.twig' %}

{% block title %}Hello TablesController!{% endblock %}


{% block body %}
   <h1 style="text-align: center;">Liste des Categories</h1>
    <table class="table">
        <thead>
            <tr>
                <th>IdCategorie</th>
                <th>Type</th>
                <th>Matricule</th>
                <th>Marque</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.idCategorie }}</td>
                <td>{{ categorie.type }}</td>
                <td>{{ categorie.matricule }}</td>
                <td>{{ categorie.marque }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        
        </tbody>
    </table>
   <h1 style="text-align: center;">Liste des Vehicules</h1>
   <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Disponibilite</th>
                <th>NumEntretien</th>
                <th>DateEntretien</th>
                <th>ResEntretien</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicule in vehicules %}
            <tr>
                <td>{{ vehicule.id }}</td>
                <td>{{ vehicule.disponibilite }}</td>
                <td>{{ vehicule.numEntretien }}</td>
                <td>{{ vehicule.dateEntretien|date('d-m-Y') }}</td>
                <td>{{ vehicule.resEntretien }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   <h1 style="text-align: center;">Liste des Missions</h1>
   <table class="table">
        <thead>
            <tr>
                <th>IdMission</th>
                <th>Matricule</th>
                <th>Description</th>
                <th>HeureDebut</th>
                <th>HeureFin</th>
            </tr>
        </thead>
        <tbody>
        {% for mission in missions %}
            <tr>
                <td>{{ mission.idMission }}</td>
                <td>{{ mission.matricule }}</td>
                <td>{{ mission.description }}</td>
                <td>{{ mission.heureDebut|date('d-m-Y H:i') }}</td>
                <td>{{ mission.heureFin|date('d-m-Y H:i')  }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        
        </tbody>
    </table>


{% endblock %}

